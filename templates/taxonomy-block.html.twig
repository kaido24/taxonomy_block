{% macro term_links(terms,  level) %}
  {% if terms %}
    <ul class="level-{{ level }}">
    {% for term in terms %}
      {% set term_path = path('entity.taxonomy_term.canonical', {'taxonomy_term': term.id() }) %}
      {% set is_active = term_path == path('<current>') ? 'active' : 'not-active' %}
      <li class="{{ is_active }}">
        <a href="{{ term_path }}">{{ term.label() }}</a>
        {% if term.children %}
          {{ _self.term_links(term.children, level+1) }}
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
